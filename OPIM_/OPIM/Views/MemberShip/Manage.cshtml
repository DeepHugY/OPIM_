
@{
    ViewBag.Title = "用户管理";
}
<div class="panel-body OPIM-panel-body form-horizontal">
    <div class="row" id="toolbar">
        <div class="col-sm-8">
            <div class="btn-group">
                <a class="btn btn-default btn-sm" id="refresh">
                    <i class="fa fa-refresh"></i>
                    刷新
                </a>
                <a class="btn btn-default btn-sm" id="remove">
                    <i class="fa fa-trash-o"> </i>
                    删除
                </a>
            </div>
            <input type="hidden" id="openModal" data-toggle="modal" data-target="#typeManageModal" />
        </div>
        <div class="col-sm-4 text-right">
            <div class="input-group">
                <input type="text" class="form-control input-sm" placeholder="请输入搜索内容" id="search_content" />
                <span class="input-group-btn">
                    <button id="serch_btn" class="btn btn-sm btn-default">
                        搜索
                    </button>
                </span>
            </div>
        </div>
    </div>
    <table id="table"
           data-toggle="table"
           data-method="get"
           data-url="/MemberShip/_MemberShipsGrid"
           data-pagination="true"
           data-page-number="1"
           data-page-size="10"
           data-single-select="true"
           data-sort-name="CreateOn"
           data-sort-order="asc"
           data-content-type="application/x-www-form-urlencoded"
           data-side-pagination="server"
           data-unique-id="Id"
           data-click-to-select="true"
           data-page-list="[10,20,30,50]"
           data-query-params-type="limits"
           data-toolbar="#toolbar"
           data-query-params="QueryParams">
        <thead>
            <tr>
                <th data-visible="false" data-field="Id">Id</th>
                <th data-checkbox="true"></th>
                <th data-field="LimitLevel"data-formatter="FormatLimitLevel">权限</th>
                <th data-field="Account">账号</th>
                <th data-field="NickName" >昵称</th>
                <th data-field="Sex" data-formatter="FormatSex">性别</th>
                <th data-field="BirthOn" data-formatter="FormatTime">出生年月</th>
                <th data-field="Phone">电话</th>
                <th data-field="Email">邮箱</th>
                <th data-field="CreateOn" data-formatter="FormatTime">创建时间</th>

            </tr>
        </thead>
    </table>
</div>
